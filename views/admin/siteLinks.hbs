<section class="section">
    <h3>Add New Site</h3>
    <form method="POST" action="/sitelinks">
    <div class="input-field">
        <input type="text" name="siteName" required />
    </div>
    <div class="input-field">
        <input type="submit" value="Create" class="btn">
    </div>
    </form>
</section>
<div class="divider"></div>
<section class="section">
    <h2>Edit Existing</h2>
    {{#each siteLinks}}
    <form method="POST" action="/sitelinks/{{_id}}?_method=PUT">
    <div class="input-field">
        <input type="text" name="siteName" value="{{siteName}}" required />
    </div>
    <div class="input-field">
        <input type="submit" value="Edit" class="btn"/>
    </div>
    </form>
    <form method="POST" action="/sitelinks/{{_id}}?_method=DELETE">
    <div class="input-field">
        <input type="submit" value="Delete" class="btn red accent-4"/>
    </div>
    </form>
    {{/each}}
</section>